<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="25"
      alignment="CENTER"
      styleClass="root"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.MainController"
      stylesheets="@../style.css">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Title -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Détection d'objets avec IA" styleClass="label-title"/>
    </HBox>

    <VBox styleClass="container" spacing="20">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Image upload and preview -->
        <VBox spacing="8" alignment="CENTER">
            <Label text="Téléchargez votre image :"
                   style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold;"/>

            <Button text="Choisir une image"
                    onAction="#chooseImage"
                    styleClass="button"/>

            <ImageView fx:id="imagePreview"
                       fitWidth="400"
                       fitHeight="300"
                       preserveRatio="true"
                       style="-fx-border-color: #94a3b8; -fx-border-width: 1;"/>
        </VBox>

        <!-- Detection results -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Résultat de l'analyse :"
                   style="-fx-text-fill: #94a3b8; -fx-font-weight: bold;"/>
            <Label fx:id="resultLabel"
                   text="En attente..."
                   styleClass="result-label"/>
        </VBox>
    </VBox>

    <!-- Footer -->
    <Label text="IA • JAVA • ONNX  • ayaeljahidi"
           style="-fx-text-fill: #64748b; -fx-font-size: 11px; -fx-padding: 20 0 0 0;"/>
</VBox>
